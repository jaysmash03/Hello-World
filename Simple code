#include <stdio.h>

int main(void) {
	int a;
	int b[a], ii, jj;
	printf("Enter a Number that is less than ten : ");
	scanf("%d",&a);
	while (a > 10) {
		printf("Please Enter a Number that is less than ten : ");
		scanf("%d", &a);
	}
	for (ii=0;ii<a;ii++) {
		printf(" enter anther value : ");
		scanf ("%d" , &b[ii]);
	}
	for (jj=0; jj<a; jj++) {
		if (b[jj] % 2 == 0) {
			printf("b[%d]=%c (%d)\n", ii, b[jj], b[jj]); 
		}
	}	 
	return 0;
}
